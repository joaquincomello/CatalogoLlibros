@model CatalogoLlibros.Models.Libro
@using Microsoft.AspNetCore.Mvc.Rendering

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>

<h2>Crear nuevo libro</h2>

@* Mostrar errores del modelo *@
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Crear" method="post" class="p-4 border rounded shadow bg-black text-white">
    <div class="mb-3">
        <label asp-for="autorId" class="form-label">Autor</label>
        <select asp-for="autorId" asp-items="ViewBag.Autores" class="form-select"></select>
        <span asp-validation-for="autorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="titulo" class="form-label">Título</label>
        <input asp-for="titulo" class="form-control" placeholder="Título del libro" />
        <span asp-validation-for="titulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="anioPublicacion" class="form-label">Fecha de Publicación</label>
        <input asp-for="anioPublicacion" type="date" class="form-control" />
        <span asp-validation-for="anioPublicacion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UrlImagen" class="form-label">URL de la Imagen</label>
        <input asp-for="UrlImagen" class="form-control" placeholder="URL de la imagen" />
        <span asp-validation-for="UrlImagen" class="text-danger"></span>
    </div>

    <input type="submit" value="Crear Libro" class="btn btn-primary" />
    <a href="@Url.Action("Index", "Libro")" class="btn btn-secondary ms-2">Volver al catálogo</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}